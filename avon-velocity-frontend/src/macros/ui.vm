#macro( input $label $id $type $placeholder $value )
  <div class="space-y-2 group">
    #if( $label )
    <label for="$!{id}" class="text-xs font-bold uppercase tracking-widest text-muted-foreground group-focus-within:text-primary transition-colors">$label</label>
    #end
    <input 
      id="$!{id}" 
      type="$!{type}" 
      placeholder="$!{placeholder}" 
      value="$!{value}"
      class="flex h-12 w-full rounded-lg border border-input bg-background/50 backdrop-blur-sm px-4 py-2 text-sm ring-offset-background transition-all placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary disabled:cursor-not-allowed disabled:opacity-50"
    />
  </div>
#end
#macro( alert $title $message $variant )
  #if( !$variant ) #set( $variant = "info" ) #end
  <div class="flex flex-col gap-1 p-4 rounded-lg border #if($variant == 'error') bg-destructive/10 border-destructive/20 text-destructive #else bg-blue-500/10 border-blue-500/20 text-blue-700 #end">
    #if( $title ) <h5 class="font-bold text-sm tracking-tight capitalize">$title</h5> #end
    <p class="text-xs opacity-90">$message</p>
  </div>
#end
