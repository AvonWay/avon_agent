#macro( button $text $variant $class $attrs )
  #if( !$variant ) #set( $variant = "default" ) #end
  
  #set( $baseClass = "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-semibold ring-offset-background transition-all duration-200 active:scale-95 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 shadow-sm" )
  
  #if( $variant == "default" )
    #set( $variantClass = "bg-primary text-primary-foreground hover:bg-primary/90 hover:shadow-primary/20 hover:shadow-lg" )
  #elseif( $variant == "destructive" )
    #set( $variantClass = "bg-destructive text-destructive-foreground hover:bg-destructive/90 hover:shadow-destructive/20 hover:shadow-lg" )
  #elseif( $variant == "outline" )
    #set( $variantClass = "border border-input bg-background hover:bg-accent hover:text-accent-foreground border-primary/20 hover:border-primary/50" )
  #elseif( $variant == "secondary" )
    #set( $variantClass = "bg-secondary text-secondary-foreground hover:bg-secondary/80" )
  #elseif( $variant == "ghost" )
    #set( $variantClass = "text-muted-foreground hover:bg-accent hover:text-accent-foreground" )
  #elseif( $variant == "premium" )
    #set( $variantClass = "bg-gradient-to-r from-blue-600 to-indigo-600 text-white hover:from-blue-700 hover:to-indigo-700 border-none shadow-md hover:shadow-xl" )
  #end
  
  <button class="$baseClass $variantClass $!{class}" $!{attrs}>
    $text
  </button>
#end

#macro( card $title $description $content $footer )
<div class="rounded-xl border bg-card/60 backdrop-blur-md text-card-foreground shadow-sm transition-all duration-300 hover:shadow-md hover:border-primary/20 group">
  <div class="flex flex-col space-y-1.5 p-6 border-b border-muted/50 bg-muted/30 rounded-t-xl group-hover:bg-primary/5 transition-colors">
    <h3 class="text-xl font-bold tracking-tight">$!{title}</h3>
    #if( $description )
    <p class="text-sm text-muted-foreground">$!{description}</p>
    #end
  </div>
  <div class="p-6">
    $!{content}
  </div>
  #if( $footer )
  <div class="flex items-center p-6 pt-0 mt-auto border-t border-muted/50 pt-4">
    $!{footer}
  </div>
  #end
</div>
#end

#macro( stat $label $value $trend $color )
<div class="p-6 rounded-xl border bg-card hover:bg-muted/50 transition-colors shadow-sm">
  <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground mb-2">$!{label}</p>
  <div class="flex items-baseline gap-2">
    <h4 class="text-3xl font-black">$!{value}</h4>
    #if( $trend )
    <span class="text-xs font-bold ${color}">$!{trend}</span>
    #end
  </div>
</div>
#end

