#macro( button $text $variant $class $attrs )
  #if( !$variant ) #set( $variant = "default" ) #end
  
  #set( $baseClass = "inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50" )
  
  #if( $variant == "default" )
    #set( $variantClass = "bg-primary text-primary-foreground hover:bg-primary/90" )
  #elseif( $variant == "destructive" )
    #set( $variantClass = "bg-destructive text-destructive-foreground hover:bg-destructive/90" )
  #elseif( $variant == "outline" )
    #set( $variantClass = "border border-input bg-background hover:bg-accent hover:text-accent-foreground" )
  #elseif( $variant == "secondary" )
    #set( $variantClass = "bg-secondary text-secondary-foreground hover:bg-secondary/80" )
  #elseif( $variant == "ghost" )
    #set( $variantClass = "hover:bg-accent hover:text-accent-foreground" )
  #elseif( $variant == "link" )
    #set( $variantClass = "text-primary underline-offset-4 hover:underline" )
  #end
  
  <button class="$baseClass $variantClass $!{class}" $!{attrs}>
    $text
  </button>
#end

#macro( card $title $description $content $footer )
<div class="rounded-lg border bg-card text-card-foreground shadow-sm">
  <div class="flex flex-col space-y-1.5 p-6">
    <h3 class="text-2xl font-semibold leading-none tracking-tight">$!{title}</h3>
    #if( $description )
    <p class="text-sm text-muted-foreground">$!{description}</p>
    #end
  </div>
  <div class="p-6 pt-0">
    $!{content}
  </div>
  #if( $footer )
  <div class="flex items-center p-6 pt-0">
    $!{footer}
  </div>
  #end
</div>
#end

