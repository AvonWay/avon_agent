{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "react": [
                "../../node_modules/react"
            ],
            "react/*": [
                "../../node_modules/react/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}